{% extends "ExampleUserRegistrationBundle:UserRegistration:layout.html.twig" %}

{% block title %}{{ parent() }}登録内容のご確認{% endblock %}

{% block content %}
<h2>登録内容のご確認</h2>

<div class="well">
  <table class="table table-striped container">
    <tbody>
      <tr><th class="span3">入力項目</th><th>内容</th></tr>
      <tr><td>名前</td><td>{{ user.lastName }} {{ user.firstName }}</td></tr>
      <tr><td>メールアドレス</td><td>{{ user.email }}</td></tr>
      <tr><td>パスワード</td><td>非表示</td></tr>
    </tbody>
  </table>
  <form action="{{ path('example_userregistration_userregistration_confirmationpost') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}

    <div class="form-actions">
      <button type="submit" class="btn" name="prev"><b>修正する</b></button>
      <button type="submit" class="btn btn-primary" name="next"><b>登録する</b></button>
    </div>
  </form>
</div>
{% endblock %}
